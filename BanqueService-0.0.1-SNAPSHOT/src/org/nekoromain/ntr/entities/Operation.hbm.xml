<?xml version="1.0" encoding="UTF-8"?>
	<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    <hibernate-mapping>
    	<class name="org.nekoromain.ntr.entities.Operation" table="operations">
    		<id name="id" type="int" column="ido">
    			<generator class="increment">
    			</generator>
    		</id>
    		<property name="idClient" type="int" not-null="true" column="idc"></property>
    		<property name="date" type="string" not-null="true"></property>
    		<property name="type" type="int" not-null="true" column="type_op"></property>
    		<property name="amount" type="double" not-null="true"></property>
    	</class>
    </hibernate-mapping>